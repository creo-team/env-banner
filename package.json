{
    "name": "@creo/env-banner",
    "version": "1.0.0",
    "description": "SSR-safe environment banner component for React applications",
    "author": "Colten Krauter <coltenkrauter>",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "homepage": "https://github.com/krauters/env-banner",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/krauters/env-banner.git"
    },
    "scripts": {
        "build": "tsc",
        "fix": "npm run lint -- --fix",
        "lint": "npx eslint src/**/*.ts src/**/*.tsx",
        "lint:examples": "npx eslint examples/**/*.tsx",
        "prepublishOnly": "npm run build",
        "test": "npm run lint",
        "upgrade:all": "npx npm-check-updates --upgrade && npm install"
    },
    "keywords": [
        "react",
        "environment",
        "banner",
        "ssr",
        "nextjs",
        "typescript",
        "component"
    ],
    "license": "ISC",
    "peerDependencies": {
        "react": ">=16.8.0"
    },
    "devDependencies": {
        "@krauters/eslint-config": "latest",
        "@types/react": "^18.3.0",
        "react": "^18.3.0",
        "typescript": "^5.7.0"
    },
    "files": [
        "dist"
    ],
    "type": "commonjs",
    "engines": {
        "node": ">=18"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.js"
        }
    }
}
